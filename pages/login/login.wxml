<view class='body'>
  <view class='signin'>
    <!-- <view class='singlogo'>
      小黑裙
    </view> -->
    <view class='signinpanel'>
      <!-- 信息 ps:文字由背景图片展示 -->
      <!-- <view class='signin-info'>
        <view class="logopanel">
          <text>小黑裙瑜伽</text>
        </view>
        <text class='h1'>管理应用信息平台</text>
        <text class='p'>Management Application Information Platform</text>
        
