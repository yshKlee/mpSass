      <!-- 登陆表单 -->
      <view class='subform'>
        <view class='subtitle'>登录</view>
        <view class='subtitle_E'>LOGIN</view>
        <form bindsubmit="formSubmit">
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd">
              <input class="weui-input" name='nickname' value='{{username}}' placeholder="请输入用户名" />
            </view>
            <view class="weui-cell__ft">
              <image mode='' src='https://www.heyqun.net/storehtml/img/user.png'></image>
            </view>
          </view>
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd">
              <input class="weui-input" confirm-type='done' password='true' name='password' value='{{password}}' placeholder="请输入密码" />
            </view>
            <view class="weui-cell__ft">
              <image mode='scaleToFill' src='https://www.heyqun.net/storehtml/img/lock.png'></image>
            </view>
          </view>
          <button form-type="submit" class="mysignbtn"></button>
        </form>
      </view>
    </view>

  </view>
</view>